{
    "name": "zyra-browser",
    "version": "1.0.0",
    "description": "A lightweight, minimalist web browser built with Electron",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:linux": "electron-builder --linux"
    },
    "keywords": [
        "browser",
        "electron",
        "minimal",
        "lightweight"
    ],
    "author": "Zyra",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.zyra.browser",
        "productName": "Zyra",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": "nsis"
        },
        "mac": {
            "target": "dmg"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}